# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Database Configuration
# Use a strong password for your PostgreSQL database
POSTGRES_PASSWORD=

# API Configuration  
# the key needs to be at least 64 characters long
TOKEN_KEY=

# Cloudinary Settings (for image/file uploads)
# Get these from your Cloudinary dashboard at https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Docker Image
# Your Docker Hub username and image name
DOCKER_IMAGE=yourusername/your-image-name:latest

# Port Configuration (optional - these are the defaults)
# Change these if you need different ports
API_PORT=5000
POSTGRES_PORT=5432
REDIS_PORT=6379